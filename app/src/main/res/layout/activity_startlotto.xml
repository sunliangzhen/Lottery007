<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_startlotto_titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_startlotto_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jpush_ic_richpush_actionbar_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_startlotto_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_cp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.bxvip.lottery007.widget.CircularProgress
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_startlotto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>