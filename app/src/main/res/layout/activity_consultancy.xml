<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_consultacy_titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_consultancy_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jpush_ic_richpush_actionbar_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日新鲜事"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_consultancy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:background="#F0808080">
            <com.bxvip.lottery007.widget.CircularProgress
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.bxvip.lottery007.widget.SwipeLayout
        android:id="@+id/swipelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/view_swipe_layout_header"/>
        <com.bxvip.lottery007.widget.PullableRecyclerView
             android:id="@+id/rv_consultancy"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
            android:background="@color/theme_item_inside_foreground"/>
        <include layout="@layout/view_swipe_layout_footer"/>
    </com.bxvip.lottery007.widget.SwipeLayout>
    <RelativeLayout
        android:id="@+id/rl_consultancy_cp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <com.bxvip.lottery007.widget.CircularProgress
            android:id="@+id/cp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>