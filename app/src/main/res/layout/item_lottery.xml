<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_touch_bg">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tv_lottery_id"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/left_direct"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="25dp"
            android:textSize="20sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_lottery_dateline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
    </LinearLayout>

    <com.bxvip.lottery007.widget.LotteryView
        android:id="@+id/lv_lottery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        app:lotteryview_ballRadius="15dp"
        app:lotteryview_ballSpan="10dp"/>
</RelativeLayout>